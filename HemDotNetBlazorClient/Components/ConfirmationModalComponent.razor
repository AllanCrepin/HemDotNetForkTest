<div class="modal fade @(IsVisible ? "show" : "")" style="display: @(IsVisible ? "block" : "none"); background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close bg-white" @onclick="OnCancel" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>@Message</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="OnCancel">@CancelText</button>
                <button type="button" class="btn btn-danger" @onclick="OnConfirm">@ConfirmText</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public string Title { get; set; } = "Bekräfta borttagning";

    [Parameter]
    public string Message { get; set; } = "Är du säker på att du vill radera detta objekt? Denna åtgärd kan inte ångras.";

    [Parameter]
    public string CancelText { get; set; } = "Avbryt";

    [Parameter]
    public string ConfirmText { get; set; } = "Ja, radera";

    [Parameter]
    public EventCallback OnCancel { get; set; }

    [Parameter]
    public EventCallback OnConfirm { get; set; }
}